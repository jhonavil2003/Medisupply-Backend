# Service Configuration
FLASK_ENV=development
SERVICE_PORT=3004
HOST=0.0.0.0

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# MCP Configuration - RAG Server Path
RAG_MCP_SERVER_PATH=/app/mcp_server/rag_server.py

# RAG Backend URL (para el servidor MCP)
